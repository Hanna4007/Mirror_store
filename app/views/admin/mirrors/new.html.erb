<div class="container-fluid">
  <h4>New mirror</h4>

  <%= form_with model: [:admin, @mirror] do |form| %>
    <div class="row">
      <div class="col-md-4 mt-2">

        <div> <%= form.label :name %> 
        <%= form.text_field :name, class: 'form-control' %>
        <% @mirror.errors.full_messages_for(:name).each do |message|  %>
          <div class="text-danger"><%= message %></div>
        <% end %> </div>

        <div> <%= form.label :height%>, cm 
        <%= form.select :height, [50, 80, 100], {}, class: 'form-control' %> </div>

        <div> <%= form.label :width%>, cm 
        <%= form.select :width, [50, 80], {}, class: 'form-control' %> </div>

        <div> <%= form.label :glass_thickness%>, mm 
        <%= form.select :glass_thickness, [4, 6], {}, class: 'form-control' %> </div>
 
        <div> <%= form.label :light %> 
        <%= form.select :light, [ 'warm', 'neutral', 'cold'], {}, class: 'form-control' %> </div>

        <div> <%= form.label :heater %>
        <%= form.check_box :heater %> </div>

        <div> <%= form.label :installation %>
        <%= form.select :installation, [ 'wall', 'table' ], {}, class: 'form-control' %> </div>

        <div> <%= form.label :lamp %>
        <%= form.select :lamp, [ 'built-in', 'outside' ], {}, class: 'form-control'  %> </div>

        <div> <%= form.label :price_square%>, $ per square meter
        <%= form.text_field :price_square, size: 8, class: 'form-control' %> 
        <% @mirror.errors.full_messages_for(:price_square).each do |message|  %>
          <div class="text-danger"><%= message %></div>
        <% end %> </div>
      </div>

      <div class="col-md-8 mt-2">
        
        <label for="mirror_mirror_images" class="btn bg-info rounded-0">
          Add image
          <%= form.file_field :mirror_images, multiple: true, style: 'display: none;' %>
        </label></p>

        <div class="field">
          <%= form.label :description %>
          <%= form.rich_text_area :description, class: 'form-control' %>
        </div>
      </div>
    </div>

    <%= form.submit "Create", class: 'btn bg-info rounded-0 my-2' %>

  <% end %>

</div>

