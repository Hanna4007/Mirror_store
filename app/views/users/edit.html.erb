<div class="container mx-3">
  <p class="fs-4">Edit profile</p>

  <%= form_with model: @current_user do |form| %>
    <div class="row">
      <div class="col-md-6">
        <%= hidden_field_tag :redirect, params[:redirect] %>
        <p> <%= form.label :email %> 
        <%= form.email_field :email, class: 'form-control' %> 
        <% @current_user.errors.full_messages_for(:email).each do |message|  %>
          <div class="text-danger"><%= message %></div>
        <% end %> </p>

        <p> <%= form.label :name %> 
        <%= form.text_field :name, class: 'form-control'  %> 
        <% @current_user.errors.full_messages_for(:name).each do |message|  %>
          <div class="text-danger"><%= message %></div>
        <% end %> </p>

        <p> <%= form.label :phone_number %> 
        <%= form.text_field :phone_number, placeholder: '+380 xxx xx xx xx', class: 'form-control'  %> 
        <% @current_user.errors.full_messages_for(:phone_number).each do |message|  %>
          <div class="text-danger"><%= message %></div>
        <% end %> </p>
      </div>
    </div>
    <%= form.submit "Save profile", class: 'btn bg-info rounded-0' %>
  <% end %>
</div>